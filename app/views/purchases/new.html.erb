<h1>購入記録作成ページ</h1>

<% provide(:title, 'new purchase') %>
<div class="form-wid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with model: @purchase do |f| %>
        <%= f.label :location_id %>
        <%= f.collection_select :location_id, Location.all, :id, :name, class: 'form-control' %>

        <%= f.label :wine_id %>
        <%= f.collection_select :wine_id, Wine.all, :id, :name, class: 'form-control' %>

        <%= f.label :comment %>
        <%= f.text_field :comment, class: 'form-control' %>

        <%= f.label :star %>
        <%= f.select :star, [1, 2, 3, 4, 5], class: 'form-control' %>

        <%= f.submit "Create purchase data", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>